<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_discount"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_priceRule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titlePriceRule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TitlePriceRule"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_priceRule"/>

    <TextView
        android:id="@+id/valuePriceRule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ValuePriceRule"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/titlePriceRule_text"
        app:layout_constraintTop_toTopOf="@id/titlePriceRule_text"/>

    <TextView
        android:id="@+id/limitPriceRule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="LimitPriceRule"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valuePriceRule_text"/>
    <TextView
        android:id="@+id/startDate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartDatePriceRule"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/limitPriceRule_text"
        app:layout_constraintTop_toTopOf="@id/limitPriceRule_text"/>
    <ImageView
        android:src="@drawable/delete"
        android:id="@+id/delete_imag"
        app:layout_constraintTop_toTopOf="@id/card_priceRule"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>

