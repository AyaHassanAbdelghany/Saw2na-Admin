<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_priceRule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue_dark"
    app:cardCornerRadius="20sp"
    app:cardElevation="2dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_discount"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/titlePriceRule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TitlePriceRule"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint_discount" />

        <TextView
            android:id="@+id/valuePriceRule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ValuePriceRule"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/titlePriceRule_text"
            app:layout_constraintTop_toTopOf="@id/titlePriceRule_text" />

        <TextView
            android:id="@+id/limitPriceRule_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/titlePriceRule_text"
            app:layout_constraintTop_toBottomOf="@id/valuePriceRule_text" />

        <TextView
            android:id="@+id/startDate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StartDatePriceRule"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/valuePriceRule_text"
            app:layout_constraintStart_toStartOf="@id/valuePriceRule_text"
            app:layout_constraintTop_toTopOf="@id/limitPriceRule_text" />

        <ImageView
            android:id="@+id/delete_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            app:layout_constraintStart_toEndOf="@id/edit_imag"
            app:layout_constraintTop_toTopOf="@id/constraint_discount">

        </ImageView>


        <ImageView
            android:id="@+id/edit_imag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint_discount">

        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

